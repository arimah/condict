{
  "name": "@condict/workspace",
  "description": "Main Condict workspace.",
  "private": true,
  "repository": "github:arimah/condict",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "clean": "rimraf packages/*/dist",
    "build": "node scripts/build -g build-tools && node scripts/build -g utils && node scripts/build -g server && node scripts/build -g ui && npm run -s build:app",
    "build:children": "lerna run build",
    "build:app": "cd packages/app && npm run -s build",
    "compile": "rollup --config config/rollup.config.js",
    "watch:utils": "node scripts/build -w -g utils",
    "watch:ui": "node scripts/build -w -g ui",
    "watch:server": "node scripts/build -w -g server",
    "watch:server-graphql": "cd packages/server && npm run -s watch:graphqlTypes",
    "watch:app": "cd packages/app && npm run -s watch",
    "serve": "cd ./dev && npx --no-install next",
    "dev:ui": "cross-env NODE_ENV=development npm-run-all --silent --parallel --print-label watch:utils watch:ui serve",
    "dev:server": "cross-env NODE_ENV=development npm-run-all --silent --parallel --print-label watch:utils watch:server watch:server-graphql",
    "dev:app": "cross-env NODE_ENV=development npm-run-all --silent --parallel --print-label watch:utils watch:ui watch:app",
    "lint": "eslint --ext .ts,.tsx dev/ packages/",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "tslib": "^2.3.1",
    "typescript": "~4.3.5"
  }
}
