{
  "name": "@condict/server",
  "version": "0.1.0",
  "description": "Condict backend/server. Exposes HTTP APIs for querying and manipulating the dictionary, and Node APIs for configuring, starting and stopping a server.",
  "repository": "github:arimah/condict",
  "author": "Alice Heurlin <alice.s.heurlin@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "condict-server": "./dist/cli.js"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "copyGraphql": "copyfiles --up 1 src-ts/schema/*/*.graphql dist/",
    "compile": "tsc",
    "build": "npm run clean && npm run compile && npm run copyGraphql",
    "prepublishOnly": "npm install && npm run build",
    "lint": "eslint --config ../eslint-node.config.js --ext .ts src/"
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.2.2",
    "@types/command-line-args": "^5.0.0",
    "@types/generic-pool": "^3.1.9",
    "@types/graphql": "^14.0.7",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.12.29",
    "apollo-server": "^2.4.8",
    "better-sqlite3": "^5.4.0",
    "chalk": "^2.4.2",
    "command-line-args": "^5.0.2",
    "dataloader": "^1.4.0",
    "deepmerge": "^2.2.1",
    "generic-pool": "^3.6.0",
    "graphql": "^14.1.1",
    "mysql": "^2.16.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "copyfiles": "^2.1.0",
    "eslint": "^5.13.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3333"
  }
}
