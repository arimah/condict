{
  "name": "@condict/server",
  "version": "0.2.3",
  "description": "Condict backend/server. Exposes HTTP APIs for querying and manipulating the dictionary, and Node APIs for configuring, starting and stopping a server.",
  "repository": "github:arimah/condict",
  "author": "Alice Heurlin <alice.s.heurlin@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "condict-server": "./dist/cli.js"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "copyGraphql": "copyfiles --up 3 ../../graphql-schema/*.graphql dist/graphql/schema",
    "compile": "tsc",
    "build": "npm run build:graphqlTypes && npm run clean && npm run build:main",
    "build:graphqlTypes": "condict-graphql-typer --schema-dir ../../graphql-schema --target=server --output ./src/graphql/types.ts",
    "build:main": "npm run compile && npm run copyGraphql",
    "prepublishOnly": "npm install && npm run build",
    "lint": "eslint --ext .ts src/"
  },
  "dependencies": {
    "@condict/gen-id": "^0.1.1",
    "@condict/inflect": "^0.1.2",
    "apollo-server": "^2.15.0",
    "bcrypt": "^5.0.0",
    "better-sqlite3": "^7.1.0",
    "chalk": "^4.1.0",
    "command-line-args": "^5.1.1",
    "dataloader": "^2.0.0",
    "deepmerge": "^4.2.2",
    "generic-pool": "^3.7.1",
    "graphql": "^15.1.0",
    "graphql-tools": "^6.0.10",
    "mysql": "^2.18.1",
    "nanoid": "^3.1.10",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@condict/eslint-plugin": "^0.1.2",
    "@condict/graphql-typer": "^0.3.0",
    "@types/bcrypt": "^3.0.0",
    "@types/better-sqlite3": "^5.4.0",
    "@types/command-line-args": "^5.0.0",
    "@types/generic-pool": "^3.1.9",
    "@types/mysql": "^2.15.14",
    "@types/node": "^14.0.13",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  }
}
