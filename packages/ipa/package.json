{
  "name": "@condict/ipa",
  "version": "0.1.18",
  "description": "IPA (international phonetic alphabet) tables and search functions.",
  "repository": "github:arimah/condict",
  "author": "Alice Heurlin <alice.s.heurlin@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "compile": "tsc",
    "build": "npm run build:data && npm run clean && npm run build:main",
    "build:data": "node build",
    "build:main": "npm run compile && npm run copyData",
    "copyData": "copyfiles --up 1 src/data.json dist/",
    "prepublishOnly": "npm install && npm run build",
    "lint": "eslint --ext .ts,.tsx src/"
  },
  "devDependencies": {
    "@condict/eslint-plugin": "^0.1.2",
    "chalk": "^4.1.0",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  }
}
