{
  "name": "@condict/ipa",
  "version": "0.1.16",
  "description": "IPA (international phonetic alphabet) tables and search functions.",
  "repository": "github:arimah/condict",
  "author": "Alice Heurlin <alice.s.heurlin@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "compile": "tsc",
    "build": "npm run build:data && npm run clean && npm run build:main",
    "build:data": "node build",
    "build:main": "npm run compile && npm run copyData",
    "copyData": "copyfiles --up 1 src/data.json dist/",
    "prepublishOnly": "npm install && npm run build",
    "lint": "eslint --ext .ts,.tsx src/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3"
  }
}
